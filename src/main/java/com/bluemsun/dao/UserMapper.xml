<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bluemsun.dao.UserMapper">

    <insert id="addUser" parameterType="User">
        insert into bs_bbs.tb_user(id, username, password, sex) values (#{username},#{password},#{sex});
    </insert>

    <delete id="deleteUserById" parameterType="int">
        delete from bs_bbs.tb_user where id=#{id};
    </delete>

    <update id="updateUser" parameterType="User">
        update bs_bbs.tb_user set username=#{username},password=#{password},sex=#{sex} where id=#{id};
    </update>

    <select id="queryUserById" parameterType="int">
        select * from bs_bbs.tb_user where id=#{id};
    </select>

    <select id="queryAllUser" resultType="User">
        select * from bs_bbs.tb_user;
    </select>
</mapper>